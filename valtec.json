		//$('.table-scroll').overlayScrollbars({className : "os-theme-round-dark", sizeAutoCapable : true, paddingAbsolute : true});
		function checkCookies(){
			let cookieDate = localStorage.getItem('cookieDate');			
			
			if( !cookieDate || (+cookieDate + 31536000000) < Date.now() ){				
				$('#cookieNotification').fadeIn(300);
			}

			$('#cookieNotification .cookie_accept').click(function(){
				localStorage.setItem('cookieDate', Date.now());
				$.fancybox.close();
				$('#cookieNotification').fadeOut(100);
				return false;
			});
		}
		
		setTimeout(checkCookies, 1000);
		
		if($('#mainform select[name="type"]').length){			
			const searchParams = new URLSearchParams(location.search);			
			if(searchParams.get('qr')){				
				$('#mainform select[name="type"] option:contains("'+searchParams.get('qr')+'")').prop('selected', 'selected');				
			}
		}
		
	});
	
</script>


		
